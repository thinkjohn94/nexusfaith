<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Faith Answers - NexusFaith Evidence Engine</title>
  <meta name="description" content="Get educated, evidence-based answers to tough faith questions. Academic-grade apologetics with scientific rigor.">
  
  <!-- Structured Data -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "Faith Answers - Evidence Engine",
      "description": "Academic-grade apologetics answers with scientific rigor",
      "url": "https://nexusfaith.com/faith-answers",
      "publisher": {
        "@type": "Organization",
        "name": "NexusFaith",
        "url": "https://nexusfaith.com"
      }
    }
  </script>
  
  <!-- Performance Optimization -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="dns-prefetch" href="https://fonts.gstatic.com">
</head>

<body>
  <EnhancedNavigation 
    currentPath="/faith-answers" 
    breadcrumbs={[
      { label: 'Home', href: '/' },
      { label: 'Evidence Hub', href: '/faith-answers' }
    ]}
  />

  <main id="main-content" class="main-content">
    <!-- Hero Section with Science-Faith Bridge -->
    <section class="hero-section">
      <ScienceFaithBridge type="hero" />
      
      <div class="hero-stats">
        <div class="stat">
          <span class="stat-number">76</span>
          <span class="stat-label">Evidence-Based Answers</span>
        </div>
        <div class="stat">
          <span class="stat-number">25+</span>
          <span class="stat-label">Credentialed Scholars</span>
        </div>
        <div class="stat">
          <span class="stat-number">‚àû</span>
          <span class="stat-label">Faith & Reason Unity</span>
        </div>
      </div>
    </section>

    <!-- Quick Search -->
    <section class="search-section">
      <div class="container">
        <div class="search-container">
          <h2 class="search-title">Find Evidence-Based Answers</h2>
          <div class="search-wrapper">
            <input 
              type="search" 
              id="quickSearch" 
              placeholder="Search questions, topics, or scholars..."
              class="search-input"
              autocomplete="off"
            />
            <button type="submit" class="search-button">
              <span class="search-icon">üîç</span>
              Search
            </button>
          </div>
          <div class="search-suggestions">
            <span class="suggestion-label">Popular:</span>
            <button class="suggestion-tag">Fine-tuning evidence</button>
            <button class="suggestion-tag">Historical Jesus</button>
            <button class="suggestion-tag">Evolution problems</button>
            <button class="suggestion-tag">Consciousness origin</button>
          </div>
        </div>
      </div>
    </section>

    <!-- Categories Grid -->
    <section class="categories-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Evidence Categories</h2>
          <p class="section-subtitle">
            Explore systematic answers organized by academic discipline and difficulty level
          </p>
        </div>

        <div class="categories-grid">
          {categories.map(category => (
            <div class="category-card" data-category={category.id}>
              <div class="category-header">
                <div class="category-icon">{category.icon}</div>
                <div class="category-meta">
                  <span class={`difficulty-badge difficulty-badge--${category.difficulty}`}>
                    {category.difficulty}
                  </span>
                  <span class="evidence-count">{category.evidenceCount} answers</span>
                </div>
              </div>
              <h3 class="category-title">{category.name}</h3>
              <p class="category-description">{category.description}</p>
              
              <div class="category-questions">
                {questionsByCategory[category.id]?.slice(0, 3).map(question => (
                  <button class="question-preview" data-question-id={question.id}>
                    <span class="question-text">{question.data.question}</span>
                    <span class="question-arrow">‚Üí</span>
                  </button>
                ))}
              </div>
              
              <div class="category-footer">
                <ScienceFaithBridge type="inline" size="small" />
                <button class="category-link">
                  Explore All {category.name} ‚Üí
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Scholars -->
    <section class="scholars-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Academic Authority</h2>
          <p class="section-subtitle">
            Learn from credentialed scholars who bridge faith and rigorous academic research
          </p>
        </div>

        <div class="scholars-grid">
          {scholars.map(scholar => (
            <ScholarProfile 
              name={scholar.name}
              credentials={scholar.credentials}
              affiliation={scholar.affiliation}
              photo={scholar.photo}
              expertise={scholar.expertise}
              quote={scholar.quote}
              bio={scholar.bio}
              publications={scholar.publications}
              size="compact"
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Sample Approach Comparison -->
    <section class="comparison-section">
      <div class="container">
        <ApproachComparison 
          topic="Fine-Tuning Evidence"
          approaches={fineTuningApproaches}
          userLevel="intermediate"
        />
      </div>
    </section>

    <!-- Featured Evidence -->
    <section class="evidence-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Latest Evidence</h2>
          <p class="section-subtitle">Recent findings from academic research</p>
        </div>

        <div class="evidence-grid">
          <CitationCard 
            title="The Privileged Planet: How Our Place in the Cosmos Is Designed for Discovery"
            author="Guillermo Gonzalez & Jay Richards"
            source="Regnery Publishing"
            year={2004}
            type="book"
            credibilityLevel="high"
            difficulty="intermediate"
            quote="The same rare conditions that make Earth habitable also make it uniquely suited for scientific discovery."
            url="https://privilegedplanet.com/"
          />
          
          <CitationCard 
            title="Signature in the Cell: DNA and the Evidence for Intelligent Design"
            author="Stephen C. Meyer"
            source="HarperOne"
            year={2009}
            type="book"
            credibilityLevel="high"
            difficulty="advanced"
            quote="The information in DNA points to an intelligent source, just as information in any other context does."
          />
          
          <CitationCard 
            title="The Anthropic Cosmological Principle"
            author="John D. Barrow & Frank J. Tipler"
            source="Oxford University Press"
            year={1986}
            type="journal"
            credibilityLevel="high"
            difficulty="advanced"
            quote="The observed values of all physical and cosmological quantities are not equally probable but they take on values restricted by the requirement that there exist sites where carbon-based life can evolve."
          />
        </div>
      </div>
    </section>

    <!-- Action Section -->
    <section class="action-section">
      <div class="container">
        <div class="action-card">
          <ScienceFaithBridge type="section" concept="fine-tuning" />
          <div class="action-content">
            <h2>Ready to Explore Deeper?</h2>
            <p>Train your apologetics skills, access exclusive research, and join a community of evidence-based believers.</p>
            <div class="action-buttons">
              <a href="/conversation-trainer" class="btn btn--primary">
                üèãÔ∏è‚Äç‚ôÇÔ∏è Practice Apologetics
              </a>
              <a href="/research" class="btn btn--secondary">
                üìä Access Research
              </a>
              <a href="/scholars" class="btn btn--secondary">
                üë®‚Äçüéì Meet Scholars
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Performance & Accessibility -->
  <div id="search-results" class="search-results" role="region" aria-label="Search results" aria-live="polite"></div>
  
  <!-- Service Worker Registration -->
  <script>
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.register('/sw.js');
    }
  </script>
</body>
</html>

