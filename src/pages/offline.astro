---
// Offline page for service worker
const title = "Offline - NexusFaith";
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content="You're currently offline. Your faith questions can still be explored with cached content.">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: system-ui, -apple-system, sans-serif;
      line-height: 1.6;
      color: #1a202c;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .offline-container {
      text-align: center;
      background: white;
      padding: 3rem;
      border-radius: 16px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      max-width: 500px;
      margin: 1rem;
    }
    
    .offline-icon {
      font-size: 4rem;
      margin-bottom: 1.5rem;
    }
    
    h1 {
      font-size: 2rem;
      margin-bottom: 1rem;
      color: #2d3748;
    }
    
    p {
      color: #4a5568;
      margin-bottom: 1.5rem;
      font-size: 1.1rem;
    }
    
    .offline-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 2rem;
    }
    
    .btn {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
      display: inline-block;
    }
    
    .btn-primary {
      background: #4299e1;
      color: white;
    }
    
    .btn-primary:hover {
      background: #3182ce;
      transform: translateY(-2px);
    }
    
    .btn-secondary {
      background: #e2e8f0;
      color: #4a5568;
    }
    
    .btn-secondary:hover {
      background: #cbd5e0;
      transform: translateY(-2px);
    }
    
    .cached-content {
      margin-top: 2rem;
      padding: 1.5rem;
      background: #f7fafc;
      border-radius: 8px;
      text-align: left;
    }
    
    .cached-content h3 {
      margin-bottom: 1rem;
      color: #2d3748;
    }
    
    .cached-links {
      list-style: none;
    }
    
    .cached-links li {
      margin-bottom: 0.5rem;
    }
    
    .cached-links a {
      color: #4299e1;
      text-decoration: none;
    }
    
    .cached-links a:hover {
      text-decoration: underline;
    }
    
    .connection-status {
      margin-top: 2rem;
      padding: 1rem;
      border-radius: 8px;
      font-weight: 600;
    }
    
    .status-offline {
      background: #fed7d7;
      color: #c53030;
    }
    
    .status-online {
      background: #c6f6d5;
      color: #2f855a;
    }
    
    @media (max-width: 640px) {
      .offline-container {
        padding: 2rem;
      }
      
      h1 {
        font-size: 1.5rem;
      }
      
      .offline-actions {
        flex-direction: column;
      }
    }
  </style>
</head>

<body>
  <div class="offline-container">
    <div class="offline-icon">ðŸ“¡</div>
    
    <h1>You're Offline</h1>
    <p>
      No internet connection detected. But don't worry! You can still explore faith questions 
      with our cached content.
    </p>
    
    <div class="connection-status status-offline" id="connection-status">
      ðŸ”´ Connection Status: Offline
    </div>
    
    <div class="offline-actions">
      <button class="btn btn-primary" onclick="tryReconnect()">
        Try Again
      </button>
      <a href="/" class="btn btn-secondary">
        Browse Cached Content
      </a>
    </div>
    
    <div class="cached-content">
      <h3>ðŸ“š Available Offline Content</h3>
      <ul class="cached-links">
        <li><a href="/faith-answers">Faith Q&A - Core apologetics questions</a></li>
        <li><a href="/about">About - Our mission and approach</a></li>
        <li><a href="/cosmology">Cosmology - Fine-tuning evidence</a></li>
        <li><a href="/biology">Biology - DNA and design arguments</a></li>
        <li><a href="/conversation-trainer">Conversation Trainer</a></li>
      </ul>
    </div>
  </div>

  <script>
    // Monitor connection status
    function updateConnectionStatus() {
      const statusEl = document.getElementById('connection-status');
      
      if (navigator.onLine) {
        statusEl.textContent = 'ðŸŸ¢ Connection Status: Online';
        statusEl.className = 'connection-status status-online';
        
        // Auto-reload after brief delay when back online
        setTimeout(() => {
          window.location.href = '/';
        }, 1500);
      } else {
        statusEl.textContent = 'ðŸ”´ Connection Status: Offline';
        statusEl.className = 'connection-status status-offline';
      }
    }
    
    function tryReconnect() {
      updateConnectionStatus();
      
      if (navigator.onLine) {
        window.location.href = '/';
      } else {
        // Show feedback
        const btn = event.target;
        const originalText = btn.textContent;
        btn.textContent = 'Still Offline...';
        btn.disabled = true;
        
        setTimeout(() => {
          btn.textContent = originalText;
          btn.disabled = false;
        }, 2000);
      }
    }
    
    // Listen for connection changes
    window.addEventListener('online', updateConnectionStatus);
    window.addEventListener('offline', updateConnectionStatus);
    
    // Initial status check
    updateConnectionStatus();
    
    // Periodically check for connection restoration
    setInterval(() => {
      if (navigator.onLine) {
        updateConnectionStatus();
      }
    }, 5000);
    
    // Service worker registration check
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.ready.then(registration => {
        console.log('Service Worker ready for offline support');
      });
    }
  </script>
</body>
</html>