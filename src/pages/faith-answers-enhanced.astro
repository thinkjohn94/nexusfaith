---
import { getCollection } from 'astro:content';
import SearchEngine from '../components/SearchEngine.tsx';

const questions = await getCollection('questions');

// Prepare questions data for the search component
const questionsData = questions.map(question => ({
  id: question.id,
  slug: question.slug,
  data: {
    title: question.data.title || question.slug.replace(/-/g, ' '),
    category: question.data.category,
    difficulty: question.data.difficulty,
    tags: question.data.tags || []
  },
  body: question.body || ''
}));
